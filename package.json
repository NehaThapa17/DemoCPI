    "license": "UNLICENSED",
    "private": true,
    "dependencies": {
        "@sap/cds": "^6.7.0",
        "@sap/cds-odata-v2-adapter-proxy": "^1.9.21",
        "@sap/xssec": "^3.2.17",
        "express": "^4",
        "hdb": "^0.19.0",
        "passport": "^0.6.0",
        "sap-cf-axios": "^0.4.8"
    },
    "devDependencies": {
        "sqlite3": "^5.0.4",
        "rimraf": "^3.0.2"
    },
    "scripts": {
        "start": "cds run",
        "undeploy": "cf undeploy DemoCPI --delete-services --delete-service-keys --delete-service-brokers",
        "build": "rimraf resources mta_archives && mbt build --mtar archive",
        "deploy": "cf deploy mta_archives/archive.mtar --retries 1"
    },
    "cds": {
        "requires": {
            "uaa": {
                "kind": "xsuaa"
            },
            "CPIDest": {
                "kind": "destination",
                "credentials": {
                    "destination": "CF_CPI"
                }
            }
        }
    }
